<VirtualHost *:80>
  ServerName <%= @params[:server_name] %>
  ServerAlias <% @params[:server_aliases].each do |a| %><%= a %> <% end %>
  DocumentRoot <%= @params[:docroot] %>
  RewriteEngine On

  # Lock things up by default
  <Directory />
    Options FollowSymLinks
    AllowOverride None
  </Directory>

  # Allow access to siteroot & below
  # Also allows overrides via .htaccess
  <Directory <%= @params[:docroot] %>>
    Options <%= [@params[:directory_options] || "+FollowSymLinks" ].flatten.join " " %>
    AllowOverride <%= [@params[:allow_override] || "None" ].flatten.join " " %>
    Order allow,deny
    Allow from all
  </Directory>

  <Directory "<%= @params[:docroot] %>/apps">
    AuthType Basic
    AuthName "EverTrue Apps Install"
    AuthUserFile /home/www/passwd_apps
    Require user apps
  </Directory>

  # Allow access to server status locally only
  <Location "/server-status">
    SetHandler server-status

    Order deny,allow
    Deny from all
    Allow from <%= node['apache']['status_allow_list'] %>
  </Location>

  # Allow access to APC stats for New Relic locally only
  Alias /apc-nrp.php /opt/newrelic_plugin_agent/apc-nrp.php

  <Directory "/opt/newrelic_plugin_agent">
    Order deny,allow
    Deny from all
    Allow from <%= node['apache']['status_allow_list'] %>
  </Directory>

  LogLevel warn
  ErrorLog <%= node['apache']['log_dir'] %>/<%= @params[:name] %>-error.log
  CustomLog <%= node['apache']['log_dir'] %>/<%= @params[:name] %>-access.log combined

  <% if @params[:directory_index] -%>
  DirectoryIndex <%= [@params[:directory_index]].flatten.join " " %>
  <% end -%>

  RewriteEngine On
  RewriteLog <%= node['apache']['log_dir'] %>/<%= @application_name %>-rewrite.log
  RewriteLogLevel 0

  # admin.evertrue rules are commented out for now due to issues w/ caching
  # across multiple instances. Will re-enable once that is sorted

  # # Force all admin traffic to correct hostname/server
  # RewriteCond %{HTTP_HOST} !^admin.evertrue.com$
  # RewriteCond %{HTTP_HOST} !amazonaws.com$
  # RewriteRule ^/(site/)?wp-admin/(.*)$ http://admin.evertrue.com/site/wp-admin/$2 [QSA,L,R=301]

  # # Force all admin traffic to correct hostname/server
  # RewriteCond %{HTTP_HOST} !^admin.evertrue.com$
  # RewriteCond %{HTTP_HOST} !amazonaws.com$
  # RewriteRule ^/(site/)?wp-login.php$ http://admin.evertrue.com/site/wp-login.php [QSA,L,R=301]

  # Canonical host, <%= @params[:server_name] %>
  # Excludes AWS ELB ping requests
  RewriteCond %{REQUEST_URI} !^\/ping
  RewriteCond %{HTTP_HOST}   !^<%= @params[:server_name] %> [NC]
  RewriteCond %{HTTP_HOST}   !^localhost$
  RewriteRule ^/(.*)$        http://<%= @params[:server_name] %>/$1 [L,R=301]

  # # Force all non-admin traffic to correct hostname
  # RewriteCond %{HTTP_HOST}   ^admin.evertrue.com$
  # RewriteCond %{REQUEST_URI} !^/site/(wp-content|wp-includes|wp-admin|wp-login.php)
  # RewriteRule ^(.*)$         http://www.evertrue.com/$1 [QSA,L,R=301]

  RewriteCond %{DOCUMENT_ROOT}/system/maintenance.html -f
  RewriteCond %{SCRIPT_FILENAME} !maintenance.html
  RewriteRule ^.*$ /system/maintenance.html [L]

  # Legacy Pages
  RewriteRule ^/about-evertrue-connect(.*) /          [R=301,L]
  RewriteRule ^/evertrue-connect(.*)       /          [R=301,L]
  RewriteRule ^/services(.*)               /          [R=301,L]
  RewriteRule ^/support/?$                 /          [R=301,L]
  RewriteRule ^/about-evertrue(.*)         /our-story [R=301,L]
  RewriteRule ^/our-mission(.*)            /our-story [R=301,L]

  # Rewrites for product verify/landing pages
  # Redirect to standalone auth verify
  RewriteRule ^/alumni/([^/]+)/verify/(.*)    http://verify.evertrue.com/$1/$2    [R=301,QSA,NC,L]

  # Organization Terms
  RewriteCond %{REQUEST_URI} !=/alumni/brown/terms.html
  RewriteRule ^/alumni/(.+?)/terms\.html      /alumni/terms.php?oid=$1            [NC,L]

  # Redirect (301) to Web/Console landing page, preserving params
  RewriteRule ^/alumni/([^/]+)(/?)((ios|android))?/?$  https://web.evertrue.com/network/$1$2$3  [R=301,L]

  # Onboarding cleanup/simplification (see github.com/evertrue/www/pull/39)
  RewriteRule ^/onboarding/premium(/)?((design|kickoff|index)\.html)?$  /onboarding/ [R=301,NC,L]
  RewriteRule ^/onboarding/(design|kickoff)\.html$                      /onboarding/ [R=301,NC,L]

  # Redirect to HubSpot landing page for Data Monster
  RewriteRule ^/datamonster http://get.evertrue.com/data-monster [R=301,NC,L]

  # AWS LB ping location
  RewriteRule ^/ping?$ /ping.txt [L]

  # WordPress uploads redirect
  RewriteRule ^/blog/wp-content/uploads/(.*) /site/wp-content/uploads/$1 [R=301,NC,L]

  # BEGIN W3TC Browser Cache
  <FilesMatch "\.(css|htc|js|js2|js3|js4|CSS|HTC|JS|JS2|JS3|JS4)$">
    <IfModule mod_headers.c>
      Header unset Set-Cookie
      Header unset Last-Modified
    </IfModule>
  </FilesMatch>

  <FilesMatch "\.(html|htm|rtf|rtx|svg|svgz|txt|xsd|xsl|xml|HTML|HTM|RTF|RTX|SVG|SVGZ|TXT|XSD|XSL|XML)$">
    <IfModule mod_headers.c>
      Header unset Last-Modified
    </IfModule>
  </FilesMatch>

  <FilesMatch "\.(asf|asx|wax|wmv|wmx|avi|bmp|class|divx|doc|docx|eot|exe|gif|gz|gzip|ico|jpg|jpeg|jpe|json|mdb|mid|midi|mov|qt|mp3|m4a|mp4|m4v|mpeg|mpg|mpe|mpp|otf|odb|odc|odf|odg|odp|ods|odt|ogg|pdf|png|pot|pps|ppt|pptx|ra|ram|svg|svgz|swf|tar|tif|tiff|ttf|ttc|wav|wma|wri|xla|xls|xlsx|xlt|xlw|zip|ASF|ASX|WAX|WMV|WMX|AVI|BMP|CLASS|DIVX|DOC|DOCX|EOT|EXE|GIF|GZ|GZIP|ICO|JPG|JPEG|JPE|JSON|MDB|MID|MIDI|MOV|QT|MP3|M4A|MP4|M4V|MPEG|MPG|MPE|MPP|OTF|ODB|ODC|ODF|ODG|ODP|ODS|ODT|OGG|PDF|PNG|POT|PPS|PPT|PPTX|RA|RAM|SVG|SVGZ|SWF|TAR|TIF|TIFF|TTF|TTC|WAV|WMA|WRI|XLA|XLS|XLSX|XLT|XLW|ZIP)$">
    <IfModule mod_headers.c>
      Header unset Set-Cookie
      Header unset Last-Modified
    </IfModule>
  </FilesMatch>
  # END W3TC Browser Cache

  # BEGIN W3TC CDN
  <FilesMatch "\.(ttf|otf|eot|woff)$">
    <IfModule mod_headers.c>
      Header set Access-Control-Allow-Origin "*"
    </IfModule>
  </FilesMatch>
  # END W3TC CDN

  # BEGIN W3TC Skip 404 error handling by WordPress for static files
  <IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{DOCUMENT_ROOT}%{REQUEST_FILENAME} !-f
    RewriteCond %{DOCUMENT_ROOT}%{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} !(robots\.txt|sitemap(_index)?\.xml(\.gz)?|[a-z0-9_\-]+-sitemap([0-9]+)?\.xml(\.gz)?)
    RewriteCond %{DOCUMENT_ROOT}%{REQUEST_FILENAME} \.(css|htc|js|js2|js3|js4|html|htm|rtf|rtx|svg|svgz|txt|xsd|xsl|xml|asf|asx|wax|wmv|wmx|avi|bmp|class|divx|doc|docx|eot|exe|gif|gz|gzip|ico|jpg|jpeg|jpe|json|mdb|mid|midi|mov|qt|mp3|m4a|mp4|m4v|mpeg|mpg|mpe|mpp|otf|odb|odc|odf|odg|odp|ods|odt|ogg|pdf|png|pot|pps|ppt|pptx|ra|ram|svg|svgz|swf|tar|tif|tiff|ttf|ttc|wav|wma|wri|xla|xls|xlsx|xlt|xlw|zip)$ [NC]
    RewriteRule .* - [L]
  </IfModule>
  # END W3TC Skip 404 error handling by WordPress for static files

  # BEGIN WordPress
  <IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^index\.php$ - [L]

    RewriteCond %{REQUEST_URI} !=/server-status
    RewriteCond %{DOCUMENT_ROOT}%{REQUEST_FILENAME} !-f
    RewriteCond %{DOCUMENT_ROOT}%{REQUEST_FILENAME} !-d
    RewriteRule . /index.php [L]
  </IfModule>
  # END WordPress
</VirtualHost>
